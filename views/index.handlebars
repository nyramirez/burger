<div class="row">
    <div class="col-sm-12 col-lg-6">
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burger-block devour=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-sm-12 col-lg-6">
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burger-block devour=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<br>
<form class="create-form">

    <div class="form-group">
        <input type="text" id="newBurger" name="name">
    </div>

    <button type="submit">Submit</button>
    <p class="instruction">Enter a burger you want to eat Click the "Submit" button.</p>
</form>